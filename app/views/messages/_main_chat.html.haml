.chatmain
  .chatmain__ginfo
    .chatmain__ginfo__box
      .chatmain__ginfo__box__leftbox
        %h3.chatmain__ginfo__box__leftbox__gname
          = @group.name
        %ul.chatmain__ginfo__box__leftbox__gmember
          Memberï¼š
          %li.chatmain__ginfo__box__leftbox__gmember__list
            - @group.users.each do |user|
              = user.name
      .chatmain__ginfo__box__edit
        = link_to edit_group_path(@group) do
          .chatmain__ginfo__box__edit--btn Edit
  .chatmain__mlog
    = render @messages
  .chatmain__mform
    .chatmain__mform__box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: "chatmain__mform__box__newm", placeholder: 'type a message'
        .chatmain__mform__box__image
          =f.label :image do
            = icon('far', 'image', class: "chatmain__mform__input__image--icon")
            = f.file_field :image, class: "chatmain__mform__box__image__inputfile"
        = f.submit "Send", class: "chatmain__mform__submit"